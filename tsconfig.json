{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2015",
        "sourceMap": true,
        "strict": true,
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "declaration": true,
        "lib": [
            "es2019"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*_spec.ts",
        "**/*_test.ts",
        "jest.config.ts",
        "dist"
    ],
    "includes": ["src"]
}
